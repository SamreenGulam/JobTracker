{
  "info": {
    "name": "Job Tracker API",
    "description": "Complete test suite for Job Tracker API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "jobId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Job CRUD Operations",
      "item": [
        {
          "name": "Create Job",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response has job data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData).to.have.property('company');",
                  "    pm.expect(jsonData).to.have.property('position');",
                  "    pm.expect(jsonData).to.have.property('status');",
                  "});",
                  "",
                  "pm.test(\"Set jobId variable\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"jobId\", jsonData.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company\": \"Google\",\n  \"position\": \"Software Engineer\",\n  \"status\": \"APPLIED\",\n  \"notes\": \"Applied through LinkedIn\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/jobs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jobs"]
            }
          }
        },
        {
          "name": "Get All Jobs",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response is an array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jobs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jobs"]
            }
          }
        },
        {
          "name": "Get Job by ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has job data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData.id).to.eql(parseInt(pm.collectionVariables.get('jobId')));",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jobs/{{jobId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jobs", "{{jobId}}"]
            }
          }
        },
        {
          "name": "Update Job",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Job status updated\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.eql('INTERVIEW');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company\": \"Google\",\n  \"position\": \"Software Engineer\",\n  \"status\": \"INTERVIEW\",\n  \"notes\": \"Phone screening scheduled for next week\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/jobs/{{jobId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jobs", "{{jobId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Search & Filter Operations",
      "item": [
        {
          "name": "Get Jobs by Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jobs/status/APPLIED",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jobs", "status", "APPLIED"]
            }
          }
        },
        {
          "name": "Get Jobs by Company",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jobs/company/Google",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jobs", "company", "Google"]
            }
          }
        },
        {
          "name": "Search Jobs by Position",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jobs/search/position?keyword=engineer",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jobs", "search", "position"],
              "query": [
                {
                  "key": "keyword",
                  "value": "engineer"
                }
              ]
            }
          }
        },
        {
          "name": "Search Jobs by Notes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jobs/search/notes?keyword=LinkedIn",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jobs", "search", "notes"],
              "query": [
                {
                  "key": "keyword",
                  "value": "LinkedIn"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Statistics & Ordering",
      "item": [
        {
          "name": "Get Job Count by Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jobs/stats/status/APPLIED",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jobs", "stats", "status", "APPLIED"]
            }
          }
        },
        {
          "name": "Get Jobs Ordered by Date",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jobs/ordered/date",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jobs", "ordered", "date"]
            }
          }
        },
        {
          "name": "Get Jobs Ordered by Company",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jobs/ordered/company",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jobs", "ordered", "company"]
            }
          }
        }
      ]
    },
    {
      "name": "Sample Data Creation",
      "item": [
        {
          "name": "Create Sample Jobs",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "[\n  {\n    \"company\": \"Microsoft\",\n    \"position\": \"Frontend Developer\",\n    \"status\": \"INTERVIEW\",\n    \"notes\": \"Technical interview scheduled\"\n  },\n  {\n    \"company\": \"Amazon\",\n    \"position\": \"Backend Engineer\",\n    \"status\": \"APPLIED\",\n    \"notes\": \"Application submitted via careers portal\"\n  },\n  {\n    \"company\": \"Apple\",\n    \"position\": \"iOS Developer\",\n    \"status\": \"OFFER\",\n    \"notes\": \"Received offer, negotiating salary\"\n  },\n  {\n    \"company\": \"Meta\",\n    \"position\": \"Full Stack Developer\",\n    \"status\": \"REJECTED\",\n    \"notes\": \"Did not pass final interview round\"\n  }\n]"
            },
            "url": {
              "raw": "{{baseUrl}}/api/jobs/batch",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jobs", "batch"]
            }
          }
        }
      ]
    },
    {
      "name": "Delete Job",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 204\", function () {",
              "    pm.response.to.have.status(204);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/jobs/{{jobId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "jobs", "{{jobId}}"]
        }
      }
    }
  ]
}